NAME	= libft.a

CC		= cc
FLAG	= -Wall -Wextra -Werror

SRCS	= $(wildcard libc/*.c) $(wildcard additional/*.c)
OBJS	= $(SRCS:.c=.o)

all		: $(NAME)
$(NAME)	: $(OBJS)
		ar rc $(NAME) $(OBJS)
.c.o	: $(SRCS)
		$(CC) $(FLAG) -c $< -o $(<:.c=.o) libft.h
clean	:
		$(RM) $(OBJS)
fclean	: clean
		$(RM) $(NAME)
re		: fclean all